<Window
    x:Class="IIoT.SmartAssistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:IIoT.SmartAssistant.Converters"
    xmlns:prism="http://prismlibrary.com/"
    Title="工业物联网.智能助手"
    Width="800"
    Height="600"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Window.Resources>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <conv:RoleToColorConverter x:Key="RoleToColorConverter" />
        <conv:TypeToVisibilityConverter x:Key="TypeToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer
            Grid.Row="0"
            Margin="0,0,0,10"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding MessageList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="10"
                            Background="{Binding Role, Converter={StaticResource RoleToColorConverter}}"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Foreground="Gray"
                                    Text="{Binding Role}" />

                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap" />

                                <Image
                                    MaxWidth="300"
                                    Margin="0,10,0,0"
                                    Source="{Binding MediaPath}"
                                    Visibility="{Binding MessageType, Converter={StaticResource TypeToVisibilityConverter}, ConverterParameter=Image}" />

                                <Border
                                    Width="250"
                                    Height="150"
                                    Margin="0,10,0,0"
                                    Background="Black"
                                    Visibility="{Binding MessageType, Converter={StaticResource TypeToVisibilityConverter}, ConverterParameter=Video}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="Lime"
                                        Text="{Binding MediaPath}" />
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Column="0"
                Height="30"
                VerticalContentAlignment="Center"
                Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Grid.Column="1"
                Width="80"
                Margin="10,0,0,0"
                Command="{Binding SendMessageCommand}"
                Content="发送指令"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}, FallbackValue=True}" />
        </Grid>
    </Grid>
</Window>